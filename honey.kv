#:kivy 1.0.9

<WelcomeScreen>
    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
            source: 'bg.jpg'
    BoxLayout:
        padding: 20
        orientation: 'vertical'
        Image:
            source: 'nichosi/08.png'
        Label:
            padding: (0, 0)
            canvas.before:
                Color:
                    rgba: 1, 1, 1, 1
                Rectangle:
                    pos: self.pos
                    size: self.size
            markup: True
            text: '[size=19][color=333333][b]Привет, Кися![/b]\nУгадывай какая фотография была [i]раньше[/i]\nДля этого просто нажимай на одну из фотографий[/color][/size]'
        Button:
            markup: True
            text: '[b]Поняла[/b]'
            size_hint: (1, 0.3)
            on_press: root.manager.current = 'main'
            background_color: 2.5, 0.5, 0.9, 1

<MainScreen>
    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
            source: 'bg.jpg'